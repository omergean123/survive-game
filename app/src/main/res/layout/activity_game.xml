<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:aapt="http://schemas.android.com/aapt" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

<View android:layout_height="100dp"
    android:layout_width="100dp"
    android:layout_centerInParent="true"
    android:visibility="invisible"
    android:background="#ffff00"
    android:id="@+id/game_LAY_center"/>

    <ImageButton android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/game_BTN_left"
        android:layout_alignTop="@+id/game_LAY_center"
        android:layout_toLeftOf="@+id/game_LAY_center"
        android:adjustViewBounds="true" android:scaleType="fitCenter" android:src="@drawable/ic_left"/>

    <ImageButton android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/game_BTN_right"
        android:layout_alignTop="@+id/game_LAY_center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_right"
        android:layout_toRightOf="@+id/game_LAY_center"/>

    <ImageButton android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/game_BTN_up" android:adjustViewBounds="true"
        android:scaleType="fitCenter" android:src="@drawable/ic_up"
        android:layout_alignLeft="@+id/game_LAY_center"
        android:layout_above="@+id/game_LAY_center"/>

    <ImageButton android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/game_BTN_down"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_down"
        android:layout_alignLeft="@+id/game_LAY_center"
        android:layout_below="@+id/game_LAY_center"/>

</RelativeLayout>